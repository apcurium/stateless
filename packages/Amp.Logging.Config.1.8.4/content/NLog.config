<?xml version="1.0" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <variable name="defaultLayout"
          value="${date:format=o} [${level:uppercase=true}] &lt;${logger}&gt; ${message}${onexception:inner= ${exception:format=tostring:maxInnerExceptionLevel=10}}" />

    <targets>
        <target name="console" xsi:type="Console"
                layout="${defaultLayout}" />
        <target name="file" xsi:type="File"
                fileName="${xamarin-path}/logs/logfile.txt"
                archiveFileName="${xamarin-path}/logs/logfile.{####}.txt"
                archiveNumbering="Rolling"
                archiveAboveSize="10485760"
                maxArchiveFiles="1"
                layout="${defaultLayout}" />
    </targets>

    <rules>
        <logger name="*" minlevel="Debug" writeTo="console" />
        <logger name="*" minlevel="Debug" writeTo="file" />
    </rules>
</nlog>
